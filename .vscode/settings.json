{
  "python.terminal.activateEnvironment": true,
  "python.defaultInterpreterPath": "${workspaceFolder}/venv/Scripts/python.exe",
  "python.analysis.extraPaths": [
    "${workspaceFolder}/ml_pipeline"
  ],
  "terminal.integrated.env.windows": {
    "PYTHONPATH": "${workspaceFolder}/ml_pipeline"
  },
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.autoImportCompletions": true,
  "python.envFile": "${workspaceFolder}/.env",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.lintOnSave": true,
  "python.linting.pylintPath": "${workspaceFolder}/venv/Scripts/pylint.exe",

  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell",
      "args": [
        "-NoExit",
        "-Command",
        "& '${workspaceFolder}\\venv\\Scripts\\Activate.ps1'"
      ]
    }
  },
  "terminal.integrated.defaultProfile.windows": "PowerShell",

  // Editor
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "diffEditor.codeLens": true,
  "workbench.settings.useSplitJSON": true,
  "workbench.editor.enablePreview": false,

  // TypeScript
  "typescript.tsdk": "node_modules\\typescript\\lib",
  "typescript.tsconfig": "tsconfig.json",

  // Deno â€” only used for backend (List of Symbols)
  "deno.enable": true,
  "deno.enablePaths":[
    "supabase/functions",
    "src/backend/tasks" 
   ],
  "deno.lint": true,
  "deno.unstable": true,
  "deno.suggest.imports.hosts": {
    "https://deno.land": true,
    "npm:": true,
    "https://deno.land/x/": true,
    "https://cdn.jsdelivr.net/gh/": true,
    "https://cdn.skypack.dev/": true
  },

  // Files
  "files.associations": {
    "*.json": "json"
  }
}
